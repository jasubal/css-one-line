{
  "name": "css-on-line",
  "displayName": "CSS-On-Line",
  "description": "Formats CSS rules into a single line per rule for better readability.",
  "version": "0.0.1",
  "publisher": "jsubalei",
  "engines": {
      "vscode": "^1.78.0"
  },
  "categories": [
      "Formatters"
  ],
  "activationEvents": [
      "onLanguage:css",
      "onLanguage:html",
      "onLanguage:php"
  ],
  "main": "./out/extension.js",
  "contributes": {
      "commands": [
          {
              "command": "css-on-line.formatDocument",
              "title": "CSS-On-Line: Format Document"
          },
          {
              "command": "css-on-line.formatSelection",
              "title": "CSS-On-Line: Format Selection"
          }
      ],
      "menus": {
          "editor/context": [
              {
                  "when": "editorHasSelection && editorLangId == css",
                  "command": "css-on-line.formatSelection",
                  "group": "z_commands@1"
              },
              {
                  "when": "editorLangId == css",
                  "command": "css-on-line.formatDocument",
                  "group": "z_commands@2"
              },
              {
                  "when": "editorHasSelection && editorLangId == html",
                 "command": "css-on-line.formatSelection",
                 "group": "z_commands@1"
              },
              {
                 "when": "editorLangId == html",
                 "command": "css-on-line.formatDocument",
                 "group": "z_commands@2"
              },
              {
                 "when": "editorHasSelection && editorLangId == php",
                 "command": "css-on-line.formatSelection",
                 "group": "z_commands@1"
              },
              {
                  "when": "editorLangId == php",
                 "command": "css-on-line.formatDocument",
                 "group": "z_commands@2"
             }
          ]
      },
      "keybindings": [
          {
              "command": "css-on-line.formatSelection",
              "key": "ctrl+cmd+l",
              "mac": "ctrl+cmd+l",
              "when": "editorTextFocus && editorHasSelection"
          }
      ]
  },
  "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile && npm run lint",
      "lint": "eslint src --ext ts",
      "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
      "@types/vscode": "^1.78.0",
      "@types/mocha": "^10.0.1",
      "@types/node": "16.x",
      "@typescript-eslint/eslint-plugin": "^5.59.1",
      "@typescript-eslint/parser": "^5.59.1",
      "eslint": "^8.39.0",
      "glob": "^8.1.0",
      "mocha": "^10.2.0",
      "typescript": "^5.1.3",
      "@vscode/test-electron": "^2.3.2"
  }
}
